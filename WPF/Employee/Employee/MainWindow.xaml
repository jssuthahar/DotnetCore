<Window x:Class="Employee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
      
           
        
    </Window.Resources>
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" Margin="10"  Grid.Row="0" Grid.Column="3">
           
        </TextBlock>
        <TextBox Grid.Row="0" Margin="10" Grid.Column="4" Width="150" Height="20"></TextBox>

        <TextBlock Text="Email" Margin="10"  Grid.Row="1" Grid.Column="3"></TextBlock>
        <TextBox Grid.Row="1" Margin="10" Grid.Column="4" Width="150" Height="20"></TextBox>
        <TextBlock Text="Phone" Margin="10"  Grid.Row="2" Grid.Column="3"></TextBlock>
        <TextBox Grid.Row="2" Margin="10" Grid.Column="4" Width="150" Height="20"></TextBox>
        <TextBlock Text="Password" Margin="10"  Grid.Row="3" Grid.Column="3"></TextBlock>
        <PasswordBox Grid.Row="3" Margin="10" Grid.Column="4" Width="150" Height="20"></PasswordBox>
        <StackPanel Grid.Row="4" Grid.Column="4" Orientation="Horizontal" Margin="10" Height="30">
            <RadioButton Content="Employee" Margin="5"></RadioButton>
            <RadioButton Content="Studnet" Margin="5"></RadioButton>
        </StackPanel>
        <Button  Content="Register" Margin="10" Grid.Row="5" Grid.Column="4">
           
            
        </Button>
        <Button Content="Clear" Width="90" Margin="10" Grid.Row="5" Grid.Column="5"></Button>
        <StackPanel  Grid.Row="6" Grid.Column="6">
            <TextBox x:Name="Content" Width="200"></TextBox>
            <Button Content="Create" x:Name="btncreate" Click="btncreate_Click"></Button>
            <Button Content="Write" x:Name="btnwrite" Click="btnwrite_Click"></Button>
            <Button Content="Delete" x:Name="btndelete" Click="btndelete_Click"></Button>
            <Button Content="Read" x:Name="btnread" Click="btnread_Click"></Button>
            <Button Content="Folder Create" x:Name="btnfolder" Click="btnfolder_Click"></Button>
            <Button Content="Delete Folder " x:Name="btndeletefolder" Click="btndeletefolder_Click"></Button>
            <Button Content="List Files " x:Name="btnlistfiles" Click="btnlistfiles_Click"></Button>
            <Button Content="List Folder " x:Name="btnfolderlist" Click="btnfolderlist_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
