<Page x:Class="Employee.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <Grid Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Settings" FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,10,0,10"/>

                <CheckBox Content="Enable Dark Mode" FontSize="16" Margin="0,5,0,5"/>
                <CheckBox Content="Receive Notifications" FontSize="16" Margin="0,5,0,5"/>
                <CheckBox Content="Auto Check-In Reminder" FontSize="16" Margin="0,5,0,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
