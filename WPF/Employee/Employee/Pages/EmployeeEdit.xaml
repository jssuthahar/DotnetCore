<Page x:Class="Employee.Pages.EmployeeEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEdit">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Edit Employee Details" FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,10,0,10"/>

            <!-- Name -->
            <Label Content="Full Name" Foreground="Gray" FontSize="14"/>
            <TextBox Width="250" Height="35" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

            <!-- Email -->
            <Label Content="Email" Foreground="Gray" FontSize="14" Margin="5,10,0,0"/>
            <TextBox Width="250" Height="35" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

            <!-- Password -->
            <Label Content="Password" Foreground="Gray" FontSize="14" Margin="5,10,0,0"/>
            <PasswordBox Width="250" Height="35" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

            <!-- Save Button -->
            <Button Content="Save Changes" Width="150" Height="40" Background="#2ECC71"
                    Foreground="White" FontSize="16" Margin="20,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
