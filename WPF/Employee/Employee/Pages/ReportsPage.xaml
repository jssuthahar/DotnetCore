<Page x:Class="Employee.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Reports Analytics" FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,10,0,10"/>

            <DataGrid AutoGenerateColumns="True" Width="500" Height="200" Background="White" 
                      AlternationCount="2" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Page>
