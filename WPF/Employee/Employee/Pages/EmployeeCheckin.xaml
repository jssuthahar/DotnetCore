<Page x:Class="Employee.Pages.EmployeeCheckin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeCheckin">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Employee Check-In" FontSize="24" FontWeight="Bold"
                       Foreground="#2C3E50" Margin="0,10,0,10"/>

            <!-- Label + TextBox -->
            <Label Content="Employee ID" Foreground="Gray" FontSize="14" Margin="0,5,0,0"/>
            <TextBox Width="250" Height="35" BorderBrush="Gray" BorderThickness="1" Padding="5"/>

            <!-- Button -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Check In" Width="150" Height="40" Background="#3498DB"
           Foreground="White" FontSize="16" Margin="10"/>
                <Button Content="Check out" Width="150" Height="40" Background="Red"
                   Foreground="White" FontSize="16" Margin="10"/>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Page>
