<Page x:Class="Employee.Pages.Details"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Details" >

    <Grid Background="#F4F4F4">
        <Border Background="White" Padding="20" CornerRadius="10"
                Width="400" Height="250" VerticalAlignment="Center"
                HorizontalAlignment="Center" Effect="{DynamicResource ShadowEffect}">

            <StackPanel>
                <!-- Employee Name -->
                <TextBlock Text="Suraj" FontSize="22" FontWeight="Bold"
                           Foreground="#2C3E50" HorizontalAlignment="Center"/>

                <!-- Employee Email -->
                <TextBlock Text="suraj@gmail.com" FontSize="16" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,10"/>

                <!-- Details Section -->
                <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                    <TextBlock Text="📌 Department: IT" FontSize="16" Foreground="#34495E"/>
                    <TextBlock Text="📆 Joined: Jan 15, 2025" FontSize="16" Foreground="#34495E"/>
                    <TextBlock Text="✔️ Status: Active" FontSize="16" Foreground="Green"/>
                </StackPanel>

                <!-- Edit Button -->
                <Button Content="Edit Employee" Width="150" Height="40" Background="#3498DB"
                        Foreground="White" FontSize="16" Margin="10,10,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
