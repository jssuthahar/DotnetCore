<Window x:Class="Employee.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Login Tab -->
            <TabItem Header="Login">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Employee Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                        <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="txtUsername" Height="40" Margin="0,0,0,10"/>
                        <TextBlock Text="Password" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox Name="txtPassword" Height="40" Margin="0,0,0,10"/>
                        <Button Content="Login" x:Name="btnlogin" Click="btnlogin_Click" Background="#007BFF" Foreground="White" Height="40"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Register Tab -->
            <TabItem Header="Register">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Employee Registration" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                        <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="txtNewUsername" Height="40" Margin="0,0,0,10"/>
                        <TextBlock Text="Password" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox Name="txtNewPassword" Height="40" Margin="0,0,0,10"/>
                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="txtEmail" Height="40" Margin="0,0,0,10"/>
                        <Button Content="Register" x:Name="btnreg" Click="btnreg_Click" Background="#28A745" Foreground="White" Height="40"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
