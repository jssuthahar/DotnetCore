<Window x:Class="FirstApp.Calc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="500"
        Width="360"
        Background="#FF1E1E1E"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10" Orientation="Vertical">

       <!--Display TextBox-->
        <TextBox x:Name="txtresult"
                 Height="70"
                 FontSize="32"
                 FontWeight="SemiBold"
                 Background="#FF1E1E1E"
                 Foreground="White"
                 BorderThickness="0"
                 TextAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Margin="0,0,0,20" />

        <!-- Row 1 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="1" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="2" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="3" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="+" Click="Operator_Click" Background="#FF0078D7" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
        </StackPanel>

        <!-- Row 2 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="4" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="5" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="6" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="-" Click="Operator_Click" Background="#FF0078D7" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
        </StackPanel>

        <!-- Row 3 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="7" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="8" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="9" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="*" Click="Operator_Click" Background="#FF0078D7" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
        </StackPanel>

        <!-- Row 4 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="C" Click="btnc_Click" Background="#FFB91D47" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="0" Click="Number_Click" Background="#FF2D2D30" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="=" Click="btnequal_Click" Background="#FF107C10" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
            <Button Content="/" Click="Operator_Click" Background="#FF0078D7" Foreground="White" FontSize="20"
                    Width="60" Height="60" Margin="5" BorderThickness="0"/>
        </StackPanel>

    </StackPanel>
</Window>
