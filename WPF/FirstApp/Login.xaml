<Window x:Class="FirstApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel>
        <Label Content="User Name"></Label>
        <TextBox x:Name="txtusername" ></TextBox>
        <Label Content="Password"></Label>
        <PasswordBox x:Name="pwpasword" PasswordChar="?" ></PasswordBox>
        <StackPanel Orientation="Horizontal">
            <Button  x:Name="btnlogin" Click="btnlogin_Click" Content="Login" Width="100" Height="30" Margin="10" HorizontalAlignment="Left"/>
            <Button   x:Name="btnreg" Content="Register" Width="100" Height="30" Margin="10" HorizontalAlignment="Left"/>
        </StackPanel>
       
    </StackPanel>
</Window>
