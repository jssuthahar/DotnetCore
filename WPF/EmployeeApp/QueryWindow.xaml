<Window x:Class="EmployeeApp.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp"
        mc:Ignorable="d"
        Title="QueryWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Execute SQL Query" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="Enter your SQL query below:" Margin="10"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtquery" AcceptsReturn="True" Width="700" Height="200" BorderThickness="5" BorderBrush="Black"></TextBox>
        <Button x:Name="btnexcute" Content="Excute" Click="btnexcute_Click"></Button>
    </StackPanel>
</Window>
