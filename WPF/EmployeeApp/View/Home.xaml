<Window x:Class="EmployeeApp.View.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JSDevBrains Admin Panel"
        Height="600" Width="1000"
        Background="#F3F6FB"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- ========== SIDEBAR NAVIGATION ========== -->
        <DockPanel Background="#2E3B55" Grid.Column="0">
            <StackPanel>
                <!-- Company Logo/Name -->
                <TextBlock Text="JSDevBrains"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20 20 10 30"/>

                <!-- Navigation Buttons -->
                <Button Content="🏠 Dashboard" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="🎓 Register Student" x:Name="btnreg" Click="btnreg_Click"  Style="{StaticResource NavButtonStyle}"/>
                <Button Content="💼 Register Client" x:Name="btnclient" Click='btnclient_Click'  Style="{StaticResource NavButtonStyle}"/>
                <Button Content="🧾 Create Invoice" x:Name="btninvoice" Click="btninvoice_Click"  Style="{StaticResource NavButtonStyle}"/>

                <Separator Margin="10 20 10 10"/>

                <Button Content="⚙️ Settings" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="ℹ️ About"  Style="{StaticResource NavButtonStyle}"/>
                <Button Content="🚪 Logout"  Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </DockPanel>

        <!-- ========== MAIN CONTENT AREA ========== -->
        <Grid Grid.Column="1">
            <Border Background="White" Margin="10" CornerRadius="10" Padding="10">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>
