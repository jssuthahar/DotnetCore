<Page x:Class="EmployeeApp.View.Pages.Invoice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="White"
      Title="Invoice">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Create Invoice"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2E3B55"
                       Margin="0 0 0 20"/>

            <!-- Invoice Header Section -->
            <Grid Grid.Row="1" Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0 0 20 0">
                    <Label Content="Invoice For (Type)" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbInvoiceFor" Width="200" SelectionChanged="cmbInvoiceFor_SelectionChanged" >
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Client"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Label Content="Name (Client/Student)" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbName" Width="300" />
                </StackPanel>
            </Grid>

            <!-- Services / Courses Table -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Add Item -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <StackPanel>
                        <Label Content="Service / Course"/>
                        <TextBox x:Name="txtService" Width="200" Height="30"/>
                    </StackPanel>
                    <StackPanel Margin="10 0 0 0">
                        <Label Content="Amount (₹)"/>
                        <TextBox x:Name="txtAmount" Width="100" Height="30"/>
                    </StackPanel>
                    <Button Content="Add" Width="80" Height="30" Margin="10 22 0 0" />
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dgServices" Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column"
                          CanUserAddRows="False" Height="200" Margin="0 0 0 10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Amount (₹)" Binding="{Binding Amount}" Width="150"/>
                        <DataGridTemplateColumn Header="Remove" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" Foreground="Red" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Total -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total: " FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTotal" Text="₹0.00" FontWeight="Bold" FontSize="16" Foreground="Green" Margin="5 0"/>
                </StackPanel>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Clear" Width="100" Margin="0 0 10 0"/>
                <Button Content="Generate Invoice" Width="150" Background="#2E3B55" Foreground="White" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
