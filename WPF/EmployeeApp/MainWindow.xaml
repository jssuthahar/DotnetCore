<Window x:Class="EmployeeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>

        <TextBlock Text="User Name" ></TextBlock>
        <TextBox x:Name="txtName" ></TextBox>
        
        <TextBlock Text="Password"  ></TextBlock>
        <PasswordBox x:Name="txtpassword"></PasswordBox>
        <Button Content="Login" x:Name="btnlogin" Click="btnlogin_Click"></Button>
    </StackPanel>
</Window>
