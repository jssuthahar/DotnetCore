<Window x:Class="EmployeeApp.ConnectionScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp"
        mc:Ignorable="d"
        Title="SQLConnection" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="SQL Connection Settings" FontSize="20" FontWeight="Bold" Margin="10"/>
        <StackPanel Margin="10">
            <TextBlock Text="Server:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtserver" Width="300" Margin="0,5,0,10"/>
            <TextBlock Text="Database:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtdatabase" Width="300" Margin="0,5,0,10"/>
            <CheckBox x:Name="chkwindows" Content="Use Windows Authentication" IsChecked="True" Margin="0,5,0,10" ></CheckBox>
            <TextBlock Text="Username:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtusername" Width="300" Margin="0,5,0,10"/>
            <TextBlock Text="Password:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="txtpassword" Width="300" Margin="0,5,0,20"/>
            <Button Content="Connect" Width="100" x:Name="btnconnect" Click="btnconnect_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
